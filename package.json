{
  "name": "sonder-prototype",
  "version": "1.0.0",
  "description": "A High Fidelity Prototype of an Ethical AI System, built for the Honda Research Institute.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dev": "dotenv -e .env -- electron-forge start",
    "build": "dotenv -e .env -- electron-forge make",
    "build:prod": "electron-forge make"
  },
  "keywords": [],
  "author": "William Scott",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "dotenv": "^17.2.0",
    "dotenv-cli": "^8.0.0",
    "electron": "^36.7.0",
    "install": "^0.13.0",
    "npm": "^10.9.2",
    "sass": "^1.89.2",
    "webpack": "^5.100.1"
  },
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@fontsource/poppins": "^5.2.6",
    "@supabase/supabase-js": "^2.50.0",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "langchain": "^0.3.27",
    "marked": "^15.0.12",
    "node-llama-cpp": "^3.9.0",
    "openai": "^4.100.0",
    "re": "^0.1.4",
    "supabase": "^2.24.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "node_modules",
          "\\.env$",
          "build\\.js$",
          "webpack\\.config\\.js$"
        ], 
        "extraResource": [
          "assets"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ]
        }
      ]
    }
  }
}
